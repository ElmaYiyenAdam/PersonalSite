---
import "../styles/global.css";

const {
  title = "Personal Site",
  description = "Personal academic portfolio and course information.",
} = Astro.props;

const pathname = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link href="https://api.fontshare.com/v2/css?f[]=rowan@400&f[]=quilon@500&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to content</a>
    <header class="site-header">
      <div class="container nav-wrap">
        <div class="brand">
          <span class="brand-mark" aria-hidden="true"></span>
          <span class="brand-text">Saygın Çamsoy</span>
        </div>
        <nav aria-label="Primary">
          <ul class="nav-list">
            <li>
              <a
                class={pathname === "/" ? "nav-link active" : "nav-link"}
                href="/"
                aria-current={pathname === "/" ? "page" : undefined}
              >
                Home
              </a>
            </li>
            <li>
              <a
                class={pathname === "/academic" ? "nav-link active" : "nav-link"}
                href="/academic"
                aria-current={pathname === "/academic" ? "page" : undefined}
              >
                Academic
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <main id="main" class="site-main">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container">
        <p>© 2026 Saygın Çamsoy. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
